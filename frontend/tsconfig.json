{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": [
      "es2017",
      "es2018",
      "es2019"
    ],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/database/*": [
        "./src/database/*"
      ],
      "@/features/*": [
        "./src/features/*"
      ],
      "@/navigation/*": [
        "./src/navigation/*"
      ],
      "@/shared/*": [
        "./src/shared/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/assets/*": [
        "./assets/*"
      ]
    },
    "noImplicitAny": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts",
    "src/types/**/*.d.ts" // ← Agregar esta línea
  ],
  "exclude": [
    "node_modules"
  ],
  "extends": "expo/tsconfig.base",
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ]
}